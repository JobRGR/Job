<div class="container">
    <div class="page-header">
        <h1>Create post</h1>
    </div>
</div>

<form class="form-horizontal login-form" name="login-form">
    <div class="col-lg-5" style="display: none">
        <input name="id" type="text" value="{{post._id}}" class="form-control" id="input-title" placeholder="Add title">
    </div>

    <div class="form-group">
        <label for="input-title" class="col-lg-2 control-label">Post title</label>

        <div class="col-lg-5">
            <input name="title" type="text" value="{{post.title}}" class="form-control" id="input-title" placeholder="Add title">
        </div>
    </div>

    <div class="form-group">
        <label for="input-text" class="col-lg-2 control-label">Info</label>

        <div class="col-lg-5">
            <input name="text" type="textarea" value="{{post.text}}" class="form-control" id="input-text" placeholder="Add info">
        </div>
    </div>

    <div class="form-group">
        <label for="input-place" class="col-lg-2 control-label">Place</label>

        <div class="col-lg-5">
            <input name="place" type="text" value="{{post.place}}" class="form-control" id="input-place" placeholder="Add place">
        </div>
    </div>

    <div class="form-group">
        <label for="input-place" class="col-lg-2 control-label">Tags</label>

        <div class="col-lg-5">
            <input name="tags" type="text" value="{{post.tags}}" class="form-control" id="input-tags" placeholder="Add tags">
        </div>
    </div>

    <div class="form-group">
        <div class="col-lg-offset-2 col-lg-10">
            <button type="submit" class="btn btn-success" data-loading-text="Sending...">Post</button>
        </div>
    </div>
</form>

<div class="container">
    <div class="alert error" role="alert"></div>
</div>

<script src="/javascripts/edit-post.js"></script>
