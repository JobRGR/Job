<div class="container">
    <div class="page-header">
        <h1>Register company
            <!--<small>Subtext for header</small>-->
        </h1>
    </div>
</div>

<form class="form-horizontal login-form" name="login-form">

    <div class="form-group">
        <label for="input-username" class="col-lg-2 control-label">Company name</label>

        <div class="col-lg-5">
            <input name="username" type="text" value="" class="form-control" id="input-username" placeholder="Add Name">
        </div>
    </div>

    <div class="form-group">
        <label for="input-password" class="col-lg-2 control-label">Password</label>

        <div class="col-lg-5">
            <input name="password" type="password" value="" class="form-control" id="input-password" placeholder="Add Password">
        </div>
    </div>

    <div class="form-group">
        <div class="col-lg-offset-2 col-lg-10">
            <button type="submit" class="btn btn-success" data-loading-text="Sending...">Register</button>
        </div>
    </div>
</form>

<div class="container">
    <span class="help-block error col-lg-2"></span>
</div>

<script src="/javascripts/register-company.js"></script>
